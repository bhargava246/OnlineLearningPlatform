{
  "build:frontend": "vite build --config vite.config.prod.ts",
  "build:backend": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --target=node18",
  "build:prod": "npm run build:frontend && npm run build:backend",
  "start:prod": "NODE_ENV=production node dist/index.js"
}